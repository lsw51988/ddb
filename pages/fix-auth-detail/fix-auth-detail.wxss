.map {
  width: 100%;
  height: 30vh;
}

.position-ab {
  position: absolute;
  top: 40%;
  left: 46%;
  width: 60rpx;
  height: 60rpx;
}

.hint {
  width: 100vw;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background: red;
  color: white;
  font-size: 30rpx;
}

.submit {
  color: white;
  width: 100%;
  background: #3367d6;
  border-radius: 0;
}

.captcha {
  width: 440rpx;
  height: 120rpx;
  margin-top: 10rpx;
  margin-left: 10%;
}

.captcha-input {
  width: 80%;
  height: 80rpx;
  border: 4rpx solid #eee;
  margin-left: 10%;
  border-radius: 10rpx;
  font-size: 34rpx;
}
