  text-indent: 20rpx;
}

.list {
  font-size: 30rpx;
  padding-left: 20rpx;
}

radio-group {
  width: 100%;
  padding-left:70rpx;
}

radio {
  width: 50%;
}

.item{
  margin-top:20rpx;
}
