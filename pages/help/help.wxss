.des {
  margin-left: 30rpx;
  height: 190rpx;
}

.weui-cell_input {
  height: 95rpx;
}

.des::after {
  border: none;
}

.captcha {
  width: 420rpx;
  height: 120rpx;
  margin-top: 10rpx;
  margin-left: 10%;
}

.captcha-input {
  width: 80%;
  height: 80rpx;
  border: 4rpx solid #eee;
  margin-left: 10%;
  border-radius: 10rpx;
  font-size: 34rpx;
}

.weui-btn-area {
  position: fixed;
  bottom: 0;
  width: 100%;
  padding: 0;
  margin: 0;
}

.near-mt {
  width: 100%;
  display: inline-block;
  background: #3367d6;
  color: white;
  border-radius: 0;
}

.search-help {
  width: 50%;
  display: inline-block;
  background: #f05b47;
  color: white;
  border-radius: 0;
}

.map {
  width: 100%;
  height: 42vh;
}

.position-ab {
  position: absolute;
  top: 40%;
  left: 46%;
  width: 60rpx;
  height: 60rpx;
}

.modal-cap {
  z-index: 99999;
  position: relative;
  top: 200px;
}

.get-capture {
  height: 95rpx;
  line-height: 95rpx;
}

.hint {
  width: 100vw;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background: red;
  color: white;
  font-size: 30rpx;
}
