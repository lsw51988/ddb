.map{
  width: 100%;
  height: 100vh;
}
.bottom-bar {
  position: fixed;
  width: 80%;
  text-align: center;
  height: 80px;
  bottom: 20px;
  margin-left: 10%;
}

.help {
  height: 80px;
  width: 80px;
  border-radius: 40px;
  display: inline-block;
  line-height: 80px;
  font-size: 15px;
  font-family: "微软雅黑";
  color: white;
  /* background: linear-gradient(to bottom, #fc1c03, #fa3921); */
  background: #FA2E05;
}

.position {
  background: white;
  height: 40px;
  width: 40px;
  border-radius: 20px;
  line-height: 20px;
  display: inline-block;
  margin-top: 20px;
  float: left;
  text-align: center;
}

.position-img {
  margin-top: 2.5px;
  margin-left:2.2px;
  width: 35px;
  height: 35px;
}

.add-station {
  background: white;
  height: 40px;
  width: 40px;
  border-radius: 20px;
  line-height: 20px;
  display: inline-block;
  margin-top: 20px;
  margin-right:5px;
  float: right;
  text-align: center;
}