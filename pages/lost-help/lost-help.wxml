<swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
    <block wx:for="{{imgUrls}}">
        <swiper-item>
            <image src="{{item}}" class="slide-image" width="355" height="150" style='width:{{windowWidth}}px' bindtap='previewImage' data-src="{{item}}" />
        </swiper-item>
    </block>
</swiper>
<view class='title'>电动车信息</view>
<view class='content'>
    <view class='item'>
        <view class='label'>品牌</view>
        <view class='val'>雅迪</view>
    </view>
    <view class='item'>
        <view class='label'>车牌号</view>
        <view class='val'>A123123</view>
    </view>
    <view class='item'>
        <view class='label'>电压</view>
        <view class='val'>48V</view>
    </view>
</view>
<view class='title'>丢失信息</view>
<form bindsubmit="formSubmit">
    <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
            <view class="weui-cell__hd">
                <view class="weui-label">丢失时间</view>
            </view>
            <view class="weui-cell__bd">
                <picker mode="date" value="{{date}}" fields="month" start="2010-01" bindchange="lostDateChange" name="lost_date" value="{{lost_date}}">
                    <view class="weui-input">{{lost_date}}</view>
                </picker>
            </view>
        </view>
        <view class="weui-cell weui-cell_input">
            <view class="weui-cell__hd">
                <view class="weui-label">丢失地区</view>
            </view>
            <view class="weui-cell__bd area">
                <picker mode="region" value="{{region}}" custom-item="{{customItem}}" name="addr">
                    <view class="picker">
                        {{region[0]}}，{{region[1]}}，{{region[2]}}
                    </view>
                </picker>
            </view>
        </view>
        <view class="weui-cell weui-cell_input">
            <view class="weui-cell__hd">
                <view class="weui-label">丢失地点</view>
            </view>
            <view class="weui-cell__bd">
                <input class="weui-input" placeholder="请输入具体丢失的地点" name="detail_addr" value="{{detail_addr}}" />
            </view>
        </view>
    </view>
    <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell">
            <view class="weui-cell__bd">
                <textarea class="weui-textarea" placeholder="备注:车辆的比较明显的特征信息" style="height: 3.3em" name="remark" />
                <view class="weui-textarea-counter">0/40</view>
            </view>
        </view>
    </view>
    <view class='title'>悬赏</view>
    <view class='offer'>
        <input type='number' name="offer" class='offer-input'></input>
        <view class="rmb">元</view>
    </view>
    <button formType="submit" class='submit'>提交</button>
</form>