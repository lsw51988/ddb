<view class='avatar-area'>
  <view wx:if="{{member.gender}}">
    <image src='/img/avatar-man.png' class='avatar'></image>
  </view>
  <view wx:else>
    <image src='/img/avatar-woman.png' class='avatar'></image>
  </view>
  <view class='nick-name'>{{member.nickName}}</view>
</view>
