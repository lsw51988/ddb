  <view class='item'>
    <view class='item-title'>帮商城</view>
    <image src="/img/arrow.png" class='arrow'></image>
  </view>
  <view class='item'>
    <view class='item-title'>我的信息</view>
    <image src="/img/arrow.png" class='arrow'></image>
  </view>
  <view class='item'>
    <view class='item-title'>账户记录</view>
    <image src="/img/arrow.png" class='arrow'></image>
  </view>
</view>