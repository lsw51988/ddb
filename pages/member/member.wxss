page {
  height: 100%;
}

.avatar-area {
  width: 100%;
  height: 20%;
  text-align: center;
  vertical-align: center;
  border-bottom: 3rpx solid #eee;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  margin-top: 40rpx;
  border-radius: 60rpx;
}

.nick-name {
  font-size: 32rpx;
}

.detail {
  width: 100%;
  height: 25vh;
  background: #eee;
}

.wx-pub {
  display: inline-block;
  width: 50%;
  height: 100%;
  float: left;
  text-align: center;
  position: relative;
  top: 5%;
}

.member {
  display: inline-block;
  width: 50%;
  height: 100%;
  float: right;
  font-size: 30rpx;
  padding-top: 30rpx;
}

.qr-code {
  width: 80%;
  height: 80%;
}

.follow {
  font-size: 26rpx;
  width: 100%;
  text-align: center;
  position: relative;
  bottom: 10rpx;
}

.line {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
}

.line label {
  width: 50%;
  display: inline-blcok;
  float: left;
}

.line view {
  width: 50%;
  display: inline-blcok;
  float: right;
}

.nine-blocks {
  height: 600rpx;
  width: 100%;
  position: absolute;
  bottom: 14rpx;
}

.block-item {
  width: 246rpx;
  height: 200rpx;
  border: 1px solid black;
  display: inline-block;
  float: left;
  text-align: center;
  font-size: 28rpx;
  line-height: 200rpx;
}

.i-want {
  border-radius: 0;
  background: white;
  width: 249rpx;
  height: 204rpx;
}

.i-want::after {
  border-radius: 0;
}
