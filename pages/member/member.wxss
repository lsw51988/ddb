page {
  height: 100%;
}

.avatar-area {
  width: 100%;
  height: 40%;
  background: #f5f6fa;
  text-align: center;
  vertical-align: center;
}

.avatar {
  width: 140rpx;
  height: 140rpx;
  margin-top: 15%;
}

.nick-name {
  font-size: 32rpx;
}

.items-area {
  height: 60%;
  width: 100%;
}

.item {
  height: 120rpx;
  line-height: 120rpx;
  width: 100%;
  border: 1px solid #eee;
}

.item-title {
  display: inline-block;
  width: 80%;
  padding-left: 20rpx;
  float: left;
  font-size:36rpx;
}

.arrow {
  display: inline-block;
  margin: 45rpx 30rpx 0 0;
  height: 35rpx;
  width: 35rpx;
  float: right;
}
