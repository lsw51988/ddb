<form bindsubmit="formSubmit" bindreset="formReset">
  <view class="weui-cells weui-cells_after-title">
    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__hd">
        <view class="weui-label">姓名</view>
      </view>
      <view class="weui-cell__bd">
        <input class="weui-input" placeholder="请输入您的姓名" name="name" />
      </view>
    </view>
    <view class="weui-cell weui-cell_input weui-cell_vcode">
      <view class="weui-cell__hd">
        <view class="weui-label">手机号</view>
      </view>
      <view class="weui-cell__bd">
        <input class="weui-input" placeholder="请输入手机号" name="mobile" />
      </view>
      <view class="weui-cell__ft">
        <view class="weui-vcode-btn" name="captcha" bindtap='getCaptcha'>获取验证码</view>
      </view>
    </view>
    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__hd">
        <view class="weui-label">短信验证码</view>
      </view>
      <view class="weui-cell__bd">
        <input class="weui-input" placeholder="请输入短信验证码" name="sms_code" />
      </view>
    </view>
    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__hd">
        <view class="weui-label">购买时间</view>
      </view>
      <view class="weui-cell__bd">
        <picker mode="date" value="{{date}}" fields="month" start="2010-01" bindchange="buyTimeChange" name="buy_time">
          <view class="weui-input">{{buy_time}}</view>
        </picker>
      </view>
    </view>

    <view class="weui-cell weui-cell_input weui-cell_vcode">
      <view class="weui-cell__hd">
        <view class="weui-label">电池容量</view>
      </view>
      <view class="weui-cell__bd">
        <picker mode="selector" range="{{battery_capacity}}" value='{{battery_index}}' bindchange="batteryCapacityChange" name="battery_capacity">
          <view class="weui-input">{{battery_capacity[battery_index]}}</view>
        </picker>
      </view>
    </view>

    <view class="weui-cell weui-cell_input weui-cell_vcode">
      <view class="weui-cell__hd">
        <view class="weui-label">品牌</view>
      </view>
      <view class="weui-cell__bd">
        <picker mode="selector" range="{{brand}}" value='{{brand_index}}' bindchange="brandChange" name="brand">
          <view class="weui-input">{{brand[brand_index]}}</view>
        </picker>
      </view>
    </view>

    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__hd">
        <view class="weui-label">价格</view>
      </view>
      <view class="weui-cell__bd">
        <input type='number' class="weui-input" placeholder="请输入购买时价格" name="price" />
      </view>
    </view>

    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__hd">
        <view class="weui-label">购买时状态</view>
      </view>
      <view class="weui-cell__bd">
        <view class="status_{{status=='new'}}" bindtap='tapNew'>全新</view>
        <view class="status_{{status=='old'}}" bindtap='tapOld'>二手</view>
      </view>
    </view>

    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__hd">
        <view class="weui-label" style='width:400rpx'>电瓶最近更换时间</view>
      </view>
      <view class="weui-cell__bd">
        <picker mode="date" value="{{battery_change_time}}" fields="month" start="2010-01" bindchange="batteryChangeTime" name="battery_change_time">
          <view class="weui-input">{{battery_change_time}}</view>
        </picker>
      </view>
    </view>

    <view class="btn-area">
      <button formType="submit" class='submit'>提交</button>
      <button formType="reset" class='reset'>重置</button>
    </view>

  </view>

</form>
<modal hidden="{{modalFlag}}" title="请输入验证码" confirm-text="提交" cancel-text="取消" bindcancel="model_cancel" bindconfirm="model_confirm">
  <input type='text' placeholder="请输入验证码" auto-focus class='captcha-input' type='number' bindblur="captchaBlur"/>
  <image src="{{imageUrl}}" class='captcha' bindtap='freshCaptcha'></image>
</modal>