.content {
    width: 80%;
    margin-left: 10%;
    height:700rpx;
}

.title {
    height: 60rpx;
    line-height: 60rpx;
    font-size: 32rpx;
    text-align: center;
    background: #fa9d3b;
    color: white;
}

.item {
    width: 100%;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 30rpx;
}

.item-remark {
    width: 100%;
    font-size: 30rpx;
}

.label {
    width: 40%;
    height: 100%;
    float: left;
    text-align: right;
}

.val {
    width: 50%;
    height: 100%;
    float: right;
    text-align: left;
}

.val-remark {
    width: 50%;
    float: right;
    text-align: left;
}

.submit {
    width: 100%;
    background: #3367d6;
    color: white;
    border-radius: 0;
    height: 90rpx;
    line-height: 90rpx;
}

.hint {
    width: 100vw;
    height:90rpx;
    line-height:90rpx;
    font-size: 26rpx;
    text-align: center;
    margin-bottom: 20rpx;
    margin-top:20rpx;
    color:#8d8d8d;
}
