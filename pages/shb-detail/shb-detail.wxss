.content {
  width: 80%;
  margin-left: 10%;
}

.title {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 32rpx;
  text-align: center;
  background: #FA9D3B;
  color: white;
}

.item {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
}

.label {
  width: 40%;
  height: 100%;
  float: left;
  text-align: right;
}

.val {
  width: 40%;
  height: 100%;
  float: right;
  text-align: left;
}

.submit {
  position: absolute;
  width: 100%;
  bottom: 0;
  background: #3367d6;
  color: white;
  border-radius: 0;
  height:80rpx;
}
.hint{
  position: absolute;
  width: 100%;
  bottom: 80rpx;
  font-size:26rpx;
  text-align: center;
  margin-bottom:20rpx;
}
