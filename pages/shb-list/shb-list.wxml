<!--二手车列表-->
<view class='bar'>
    <view class='item'>
        <picker bindchange="timeChange" value="{{time_index}}" range="{{time_range}}" class='item-s'>
            <view type="default" class="SimHei text-center fs-13 ">{{time_range[time_index]}}
            </view>
        </picker>
        <image src="/img/arrow-down.png" class='arrow' />
    </view>
    <view class='item'>
        <picker mode="region" bindchange="addrChange" value="{{region}}" class='item-s'>
            <view type="default" class="SimHei text-center fs-13 ">{{region[2]}}
            </view>
        </picker>
        <image src="/img/arrow-down.png" class='arrow' />
    </view>
    <view class='item'>
        <picker bindchange="priceChange" value="{{price_index}}" range="{{price_range}}" class='item-s'>
            <view type="default" class="SimHei text-center fs-13 ">{{price_range[price_index]}}
            </view>
        </picker>
        <image src="/img/arrow-down.png" class='arrow' />
    </view>
</view>

<view wx:if='{{bike_list.length == 0}}'>
    <view class='no-data'>暂无数据</view>
</view>
<view wx:else>
    <view wx:for="{{bike_list}}">
        <view class='list-item' bindtap='gotoShbDetail' data-id="{{item.id}}">
            <view class='li-top'>
                <view class='number'>编号No.{{item.id}}</view>
                <view class='date'>{{item.created_at}}</view>
            </view>
            <view class='li-bottom'>
                <view class='brand'>{{item.brand_name}}</view>
                <view class='addr'>{{item.city}}{{item.district}}</view>
                <view class='price'>{{item.out_price}}元</view>
            </view>
        </view>
    </view>
</view>